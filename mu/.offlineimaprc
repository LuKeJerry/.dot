[general]
accounts = Mobilebridge,Gmail,Frenz
pythonfile = ~/.local/share/mu/lib.py

[DEFAULT]


[Account Gmail]
localrepository = LocalGmail
remoterepository = RepositoryGmail
synclabels = yes
labelsheader = X-Keywords
maxconnections = 2

[Repository LocalGmail]
type = GmailMaildir
localfolders = ~/.cache/mail/aliem13@gmail.com
nametrans = nametrans

[Repository RepositoryGmail]
type = Gmail
remoteusereval = get_pass("aliem13@gmail.com")["user"]
remotepasseval = get_pass("aliem13@gmail.com")["password"]
folderfilter = folder_filter
realdelete=no
ssl = true
sslcacertfile = /usr/local/etc/openssl/cert.pem  # This will only work for macOS
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = nametrans_reverse

