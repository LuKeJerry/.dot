[Account Mobilebridge]
localrepository = LocalMobilebridge
remoterepository = RepositoryMobilebridge
synclabels = yes
labelsheader = X-Keywords
maxconnections = 2

[Repository LocalMobilebridge]
type = Maildir
localfolders = ~/.cache/mail/lorenzo@mobilebridge.com
nametrans = nametrans

[Repository RepositoryMobilebridge]
type = IMAP
remotehost = outlook.office365.com
remoteport = 993
remoteusereval = get_pass("lorenzo@mobilebridge.com")["user"]
remotepasseval = get_pass("lorenzo@mobilebridge.com")["password"]
folderfilter = lambda folder: folder in ['INBOX', 'Sent', 'Drafts', 'Sent Items', 'Junk E-Mail']
realdelete=no
ssl = true
sslcacertfile = /usr/local/etc/openssl/cert.pem  # This will only work for macOS
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = nametrans_reverse